    LOCAL &TraceSink
            //attach and halt if not already done so
            do std_utils ATTACHPROC dontgo
            
            // We always need HWIO    
            IF !y.exist(HWIO_QDSS_CTI0_CTICONTROL_ADDR)
            (
                do hwio
            )
            
            &TraceSink="&ARG0"
            do std_trace_&CHIPSET SETUPGPIOS &ACTION &TraceSink
            
