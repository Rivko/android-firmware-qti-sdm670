<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/effects_bottom_controls"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="@string/effects_background_toolbox"
        android:textColor="#a1a1a1"
        android:textSize="10sp" />

    <ScrollView
        android:layout_width="109dp"
        android:layout_height="match_parent"
        android:fadingEdgeLength="@dimen/scroll_view_fade_edge_length"
        android:paddingBottom="6dp"
        android:requiresFadingEdge="vertical" >

        <LinearLayout
            android:id="@+id/effects_background_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/effects_background_effects" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
