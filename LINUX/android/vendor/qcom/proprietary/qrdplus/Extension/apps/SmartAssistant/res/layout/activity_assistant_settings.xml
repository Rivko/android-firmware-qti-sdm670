<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="@dimen/activity_item_border_space"
            android:layout_marginTop="16dp"
            android:text="@string/assistant_switch_name"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/assistant_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/activity_item_border_space"
            android:layout_centerVertical="true"
            android:thumb="@drawable/smart_switch_button_selector"
            android:track="@drawable/smart_switch_background_selector"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/one_shot_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="@dimen/activity_item_border_space"
            android:layout_marginTop="16dp"
            android:text="@string/one_shot_switch_name"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/one_shot_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/activity_item_border_space"
            android:layout_centerVertical="true"
            android:thumb="@drawable/smart_switch_button_selector"
            android:track="@drawable/smart_switch_background_selector"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/user_verification_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="@dimen/activity_item_border_space"
            android:layout_marginTop="16dp"
            android:text="@string/user_verification_switch_name"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/user_verification_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/activity_item_border_space"
            android:layout_centerVertical="true"
            android:thumb="@drawable/smart_switch_button_selector"
            android:track="@drawable/smart_switch_background_selector"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/users_list_area"
        android:visibility="visible">

        <ListView
            android:id="@+id/user_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/divider"
            android:dividerHeight="1dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <LinearLayout
            android:id="@+id/add_user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add_user_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/add_user_image_border_space"
                android:src="@drawable/btn_add"/>

            <TextView
                android:id="@+id/add_user_label"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/user_item_height"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="@string/add_user_tip"
                android:textSize="16sp"/>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_item_border_space"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:text="@string/application_info_text"
            android:textColor="#000000"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/app_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_item_border_space"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

</LinearLayout>