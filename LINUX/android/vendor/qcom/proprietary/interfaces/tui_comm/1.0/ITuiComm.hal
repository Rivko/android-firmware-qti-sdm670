import ITuiCommCallBack;

/** Example service interface */
interface ITuiComm {

        struct secdisp_ip {
                uint8_t  bDisableOverlay;
                uint8_t bToRender;
                uint32_t colorFormat;
                uint32_t u32Height;
                uint32_t u32Width;
                uint32_t u32HPos;
                uint32_t u32VPos;
                uint64_t bufHandle;
         };

        struct secdisp_op {
                int32_t status;
                uint16_t  u16NumBuffers;
                uint32_t u32Height;
                uint32_t u32Width;
                uint64_t bufHandle;
                uint32_t u32Stride;
                uint32_t u32PixelWidth;
                handle fd;
        };

        struct sock_name {
                string name;
        };

        struct sock_msg {
                uint8_t info_0;
                uint8_t info_1;
                uint8_t info_2;
                uint8_t info_3;
                secdisp_ip input;
                secdisp_op output;
                uint8_t response;
                string sender_name;
                string recv_name;
        };

        struct sock_req {
                uint8_t is_peep;
                string name;
                uint8_t index;
                uint8_t tet;
        };

        struct sock_result{
                uint8_t response;
        };

        sock_init(sock_name data) generates (sock_result result);
        sock_close(sock_req data) generates (sock_result result);
        send_smessage( sock_msg msg) generates (sock_result result);
        recv_smessage (sock_req req) generates (sock_msg msg);
        send_message( sock_msg msg) generates (sock_result result);
        recv_message (sock_req req) generates (sock_msg msg);
        register_callback(ITuiCommCallBack clientCallback) generates (sock_result result);
        register_callback_lst(ITuiCommCallBack clientCallback) generates (sock_result result);
        register_callback_tch(ITuiCommCallBack clientCallback) generates (sock_result result);


};
