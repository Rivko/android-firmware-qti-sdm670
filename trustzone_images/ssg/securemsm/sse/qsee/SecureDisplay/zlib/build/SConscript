Import('env')
env = env.Clone()

includes = ['../include',
    "${BUILD_ROOT}/core/api/services",
    "${BUILD_ROOT}/ssg/api/securemsm/trustzone/qsee",
    "${BUILD_ROOT}/ssg/securemsm/trustzone/qsee/services/inc/",
    "${BUILD_ROOT}/core/api/kernel/libstd/stringl/",]

env.Append(CCFLAGS = " -DHAVE_CONFIG_H -DZLIB_CONST -DMAX_WBITS=14 -DSECURE_UI_SUPPORTED")

sources = [
  '../src/adler32.c',
  '../src/compress.c',
  '../src/crc32.c',
  '../src/deflate.c',
  '../src/gzclose.c',
  '../src/gzlib.c',
  '../src/gzread.c',
  '../src/gzwrite.c',
  '../src/infback.c',
  '../src/inffast.c',
  '../src/inflate.c',
  '../src/inftrees.c',
  '../src/trees.c',
  '../src/uncompr.c',
  '../src/zutil.c',
]

zlib = env.SecureAppLibBuilder(includes, sources, 'zlib')
if zlib:
  env.Deploy([
    'SConscript',
    zlib,
  ])
Return('zlib')

